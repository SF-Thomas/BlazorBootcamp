@page "/learn/parentcomponent"

<h3>Parent Child relation</h3>

<p><b>@message</b></p>

<ChildComponent Title="This title is passed as parameter from the parent component."
				MessageForGrandChild="This is a message from your parent"
				OnButtonClick="ShowMessage"
				@ref="child">
	Render fragment from parent.
</ChildComponent>

@* <ChildComponent Title="This is second child component."/> *@

<AnotherChildComponent InputAttributes="InputAttributesFromParent" />
<AnotherChildComponent placeholder="Placeholder from parent 2" />
<br/>
<div class="row">
	<button class="btn btn-success" @onclick="()=> child.ToasterSuccess()" >Show Sweet Alert</button>
</div>

@code {

	private ChildComponent child;

	public Dictionary<string, object> InputAttributesFromParent { get; set; } = new Dictionary<string, object>()
	{
		{ "required", "required" },
		{ "placeholder", "Placeholder from parent" },
		{ "maxLength", 5 },
	};

	public string message { get; set; } = string.Empty;

	private void ShowMessage()
	{
		message = "Button clicked from child component";
	}
}
